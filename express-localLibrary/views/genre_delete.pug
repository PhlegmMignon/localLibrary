extends layout 

block content 
  h1 #{title}

  if allBooks.length 
    p #[strong Delete the following books before attempting to delete genre]

    div(style='margin-left:20px;margin-top:20px')

      h4 #{genre.name} books 
      
      dl 
      each book in allBooks 
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else 
    p Do you really want to delete this genre?

    form(method='post' action='')
      div.form-group
        input#genreid.form-control(type='hidden', name='genreid', required='true', value=genre._id)

      button.btn.btn-primary(type='submit') Delete


